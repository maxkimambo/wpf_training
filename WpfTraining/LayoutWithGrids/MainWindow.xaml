<Window x:Class="LayoutWithGrids.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grid Demo" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Rectangle Fill="Blue" Grid.Row="0"></Rectangle>
        <Rectangle Fill="Green" Grid.Row="1"></Rectangle>
        <Rectangle Fill="Yellow" Grid.Row="2"></Rectangle>
    </Grid>
</Window>

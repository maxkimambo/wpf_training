<Window x:Class="LayoutDockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="540">
    <DockPanel>
        <Button Height="25" DockPanel.Dock="Top"></Button>
        <Button Height="25" DockPanel.Dock="Bottom"></Button>
        <Button Width="25" DockPanel.Dock="Left"></Button>
        <Button Width="25" DockPanel.Dock="Right"></Button>
        <Button Background="Orange"></Button>
    </DockPanel>
</Window>
